<Window x:Class="DeskFrame.CategoryManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Kategorien" Height="420" Width="640" WindowStyle="ToolWindow" Background="#222" Foreground="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <DockPanel>
            <ListView x:Name="CategoryList" SelectionMode="Single" DockPanel.Dock="Left" Width="260" Margin="0,0,10,0">
                <ListView.View>
                    <GridView>
                        <GridViewColumn Header="Name" Width="120" DisplayMemberBinding="{Binding Name}"/>
                        <GridViewColumn Header="Aktiv" Width="50">
                            <GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox IsChecked="{Binding Enabled}"/>
                                </DataTemplate>
                            </GridViewColumn.CellTemplate>
                        </GridViewColumn>
                    </GridView>
                </ListView.View>
            </ListView>
            <StackPanel>
                <TextBlock Text="Details" FontWeight="Bold" Margin="0,0,0,4"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <TextBlock Text="Name:" Width="60"/>
                    <TextBox x:Name="NameBox" Width="200"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <TextBlock Text="Extensions:" Width="60"/>
                    <TextBox x:Name="ExtensionsBox" Width="380" ToolTip="Komma-getrennt oder leer wenn Regex/CatchAll"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <TextBlock Text="Regex:" Width="60"/>
                    <TextBox x:Name="RegexBox" Width="380" ToolTip="Optional benutzerdefinierter Regex"/>
                </StackPanel>
                <CheckBox x:Name="CatchAllBox" Content="CatchAll (Sonstiges)" Margin="0,0,0,4"/>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <Button Content="Neu" Width="70" Click="Add_Click"/>
                    <Button Content="Entfernen" Width="90" Margin="6,0,0,0" Click="Remove_Click"/>
                    <Button Content="Nach oben" Width="90" Margin="6,0,0,0" Click="Up_Click"/>
                    <Button Content="Nach unten" Width="90" Margin="6,0,0,0" Click="Down_Click"/>
                </StackPanel>
            </StackPanel>
        </DockPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="Speichern &amp; Refresh" Width="150" Click="Save_Click"/>
            <Button Content="SchlieÃŸen" Width="100" Margin="10,0,0,0" Click="Close_Click"/>
        </StackPanel>
    </Grid>
</Window>
