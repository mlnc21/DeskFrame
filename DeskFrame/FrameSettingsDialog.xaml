<?xml version="1.0" encoding="utf-8"?>
<ui:FluentWindow x:Class="DeskFrame.FrameSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml" 
        xmlns:local="clr-namespace:DeskFrame"
        xmlns:colorpick="clr-namespace:DeskFrame.ColorPicker"
        xmlns:properties="clr-namespace:DeskFrame.Properties;assembly=DeskFrame"
        xmlns:prop="clr-namespace:DeskFrame.Properties"
        ExtendsContentIntoTitleBar="True"
        mc:Ignorable="d"    
        Background="#66232323" 
        WindowStyle="None" 
        ResizeMode="NoResize"
        Height="800" 
        Width="840"
        MinWidth="0"
        MinHeight="0">
    <Grid>
        <ui:TitleBar Title="{x:Static prop:Lang.FrameSettings_TitleBarText}" Name="Titlebar" Padding="8,0,0,0" Height="30" CanMaximize="False" ShowMinimize="False" ApplicationTheme="Dark" ShowMaximize="False" CloseClicked="Titlebar_CloseClicked">
            <ui:TitleBar.Icon>
                <ui:ImageIcon Source="/ico.png" Margin="0,0,6,0" />
            </ui:TitleBar.Icon>

            <ui:TitleBar.TrailingContent>
                <StackPanel Orientation="Horizontal">
                    <ui:DropDownButton x:Name="ChangeStyleDropDownButton" Content="{x:Static prop:Lang.FrameSettings_ChangeStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="2" Margin="0,0,20,0" Height="30" Padding="10,0,10,0" Click="ChangeStyleDropDownButton_Click" />
                    <ui:Button x:Name="ChangeFolderButton" Content="{x:Static prop:Lang.FrameSettings_ChangeFolder}" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Column="2" Margin="0,0,10,0" Height="30" Padding="10,0,10,0" Click="ChangeFolderButton_Click"/>
                </StackPanel>
            </ui:TitleBar.TrailingContent>
        </ui:TitleBar>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="260"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="260"/>
            </Grid.ColumnDefinitions>
            <ui:Flyout x:Name="uiFlyout"  Padding="13" IsTabStop="True" HorizontalAlignment="Right" VerticalAlignment="Center">
                <StackPanel  x:Name="ColorCard" />
            </ui:Flyout>
            <StackPanel Orientation="Vertical" Margin="20,45,10,0" Grid.Column="0">
                <Label Content="{x:Static prop:Lang.FrameSettings_CategoryMiscellaneous}" Margin="0,0,0,17" Height="50"  FontWeight="Bold" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" >
                    <Label.Foreground>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.HighlightColorKey}}"/>
                    </Label.Foreground>
                </Label>

                <StackPanel Orientation="Horizontal" >
                    <CheckBox x:Name="BorderEnabledCheckBox" Margin="-11,0,-5,0" Checked="BorderEnabledCheckBox_Checked"  Unchecked="BorderEnabledCheckBox_Checked"/>
                    <ui:Button x:Name="BorderColorButton"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="1,7,5,0" Icon="{ui:SymbolIcon Color24}" Padding="-10" Click="BorderColorButton_Click">
                        <ui:Button.Foreground>
                            <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFF5A5A"/>
                                <GradientStop Color="#FF5A5AFF" Offset="0.8"/>
                                <GradientStop Color="#FF5AFF5A" Offset="0.4"/>
                            </LinearGradientBrush>
                        </ui:Button.Foreground>
                    </ui:Button>
                    <Label Content="{x:Static prop:Lang.FrameSettings_BorderColor}"  VerticalAlignment="Center"/>
                </StackPanel>
                <Grid>
                    <Rectangle  Width="20" Height="20" RadiusX="5"   IsHitTestVisible="False" Panel.ZIndex="2" RadiusY="5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,7,16,0">
                        <Rectangle.Fill>
                            <VisualBrush Stretch="Uniform" TileMode="Tile" Viewport="0,0,8,8" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="Absolute" >
                                <VisualBrush.Visual>
                                    <Canvas Width="8" Height="8">
                                        <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="0" Canvas.Top="0"/>
                                        <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="4" Canvas.Top="0"/>
                                        <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="0" Canvas.Top="4"/>
                                        <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="4" Canvas.Top="4"/>
                                    </Canvas>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <Rectangle Width="20" Height="20" RadiusX="5" RadiusY="5" Panel.ZIndex="4344"
                               Fill="{Binding Foreground, ElementName=BorderColorTextBoxIcon}" 
                               HorizontalAlignment="Right" IsHitTestVisible="False" VerticalAlignment="Top" Margin="0,7,16,0"/>

                    <ui:TextBox x:Name="BorderColorTextBox" IconPlacement="Right" Margin="0,0,0,20" TextChanged="TextChangedHandler">
                        <ui:TextBox.Icon>
                            <ui:SymbolIcon Symbol="Square20" Filled="True" FontSize="30" 
                                       x:Name="BorderColorTextBoxIcon"
                                       MouseUp="BorderColorTextBoxIcon_MouseUp" 
                                       />
                        </ui:TextBox.Icon>
                    </ui:TextBox>
                </Grid>
                <StackPanel Orientation="Horizontal">
                    <ui:Button  x:Name="FilesBackgroundColorButton" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="1,1,5,0" Icon="{ui:SymbolIcon Color24}" Padding="-10" Click="FilesBackgroundColorButton_Click">
                        <ui:Button.Foreground>
                            <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFF5A5A"/>
                                <GradientStop Color="#FF5A5AFF" Offset="0.8"/>
                                <GradientStop Color="#FF5AFF5A" Offset="0.4"/>
                            </LinearGradientBrush>
                        </ui:Button.Foreground>
                    </ui:Button>
                    <Label Content="{x:Static prop:Lang.FrameSettings_BackgroundColor}" Height="30"/>
                </StackPanel>
                <Grid>
                    <Rectangle  Width="20" Height="20" RadiusX="5"   IsHitTestVisible="False" Panel.ZIndex="2" RadiusY="5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,7,16,0">
                        <Rectangle.Fill>
                            <VisualBrush Stretch="Uniform" TileMode="Tile" Viewport="0,0,8,8" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="Absolute" >
                                <VisualBrush.Visual>
                                    <Canvas Width="8" Height="8">
                                        <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="0" Canvas.Top="0"/>
                                        <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="4" Canvas.Top="0"/>
                                        <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="0" Canvas.Top="4"/>
                                        <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="4" Canvas.Top="4"/>
                                    </Canvas>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <Rectangle Width="20" Height="20" RadiusX="5" RadiusY="5" Panel.ZIndex="4344"
                               Fill="{Binding Foreground, ElementName=ListViewBackgroundColorTextBoxIcon}" 
                               HorizontalAlignment="Right" IsHitTestVisible="False" VerticalAlignment="Top" Margin="0,7,16,0"/>

                    <ui:TextBox x:Name="ListViewBackgroundColorTextBox"  IconPlacement="Right" PlaceholderText="#0C000000" Margin="0,0,0,20" TextChanged="TextChangedHandler">
                        <ui:TextBox.Icon>
                            <ui:SymbolIcon Symbol="Square20" Filled="True" FontSize="30" 
                     x:Name="ListViewBackgroundColorTextBoxIcon" 
                     MouseUp="ListViewBackgroundColorTextBoxIcon_MouseUp" />
                        </ui:TextBox.Icon>
                    </ui:TextBox>
                </Grid>

                <Label Content="{x:Static prop:Lang.FrameSettings_ShowOnVirtualDesktopLabel}" Height="30"/>
                <ui:TextBox x:Name="ShowOnVirtualDesktopTextBox" PlaceholderText="{x:Static prop:Lang.FrameSettings_ShowOnVirtualDesktopPlaceHolder}" Margin="0,0,0,20" TextChanged="TextChangedHandler"/>


                <Label Content="{x:Static prop:Lang.FrameSettings_ShowFileExtensionIcon}" Height="30"/>
                <StackPanel Orientation="Vertical">
                    <CheckBox x:Name="ShowFileExtensionIconCheckBox" Content="{x:Static prop:Lang.FrameSettings_ShowFileExtensionIcon}" Margin="-11,0,10,0" Checked="ShowFileExtensionIconCheckBox_Checked" Unchecked="ShowFileExtensionIconCheckBox_Checked"/>
                    <CheckBox x:Name="ShowHiddenFilesIconCheckBox" Content="{x:Static prop:Lang.FrameSettings_ShowHiddenFilesIcon}" Margin="-11,0,0,0" Checked="ShowHiddenFilesIconCheckBox_Checked" Unchecked="ShowHiddenFilesIconCheckBox_Checked"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Label Content="{x:Static prop:Lang.FrameSettings_AnimationSpeed}" Height="30" Margin="0,20,0,0"/>
                    <Label x:Name="AnimationSpeedLabel" Content="0.0" Height="30" Margin="5,20,0,0" Foreground="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" FontWeight="Bold"/>
                </StackPanel>
                <Slider x:Name="AnimationSpeedSlider" Width="200" TickPlacement="TopLeft" TickFrequency="1" Minimum="0" Maximum="10" ValueChanged="Slider_ValueChanged" IsSnapToTickEnabled="True"/>

                <StackPanel Orientation="Horizontal">
                    <Label Content="{x:Static prop:Lang.FrameSettings_IdleOpacityLabel}" Height="30" Margin="0,20,0,0"/>
                    <Label x:Name="IdleOpacityLabel" Content="0%" Height="30" Margin="5,20,0,0" Foreground="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" FontWeight="Bold"/>
                </StackPanel>
                <Slider x:Name="IdleOpacitySlider" Width="200" TickPlacement="TopLeft" TickFrequency="1" Minimum="1" Maximum="10" ValueChanged="Slider_ValueChanged" IsSnapToTickEnabled="True"/>

                <CheckBox x:Name="AutoExpandonCursorCheckBox" Margin="-11,10,0,0" Checked="AutoExpandonCursorCheckBox_Checked" Unchecked="AutoExpandonCursorCheckBox_Unchecked">
                    <TextBlock Text="{x:Static prop:Lang.FrameSettings_AutoExpandonCursor}" TextWrapping="Wrap"/>
                </CheckBox>
                <CheckBox x:Name="ShowShortcutArrowCheckBox" Margin="-11,0,0,0" Checked="ShowShortcutArrowCheckBox_Checked" Unchecked="ShowShortcutArrowCheckBox_Unchecked">
                    <TextBlock Text="{x:Static prop:Lang.FrameSettings_ShowShortcutArrow}" TextWrapping="Wrap"/>
                </CheckBox>
                <CheckBox x:Name="CheckFolderSizeCheckBox" Margin="-11,0,0,0" Checked="CheckFolderSizeCheckBox_Checkked" Unchecked="CheckFolderSizeCheckBox_Uncheckked">
                    <TextBlock Text="{x:Static prop:Lang.FrameSettings_CheckFolderSize}" TextWrapping="Wrap"/>
                </CheckBox>
                <CheckBox x:Name="ShowLastAccessedToFirstRowCheckBox" Margin="-11,0,0,0" Checked="ShowLastAccessedToFirstRowCheckBox_Checked" Unchecked="ShowLastAccessedToFirstRowCheckBox_Unchecked">
                    <TextBlock Text="{x:Static prop:Lang.FrameSettings_ShowLastAccessedItem}" TextWrapping="Wrap"/>
                </CheckBox>



            </StackPanel>
            <Separator HorizontalAlignment="Center"  Grid.Column="1" Margin="0,20,0,20"/>

            <StackPanel  Orientation="Vertical" Margin="10,45,10,0" Grid.Column="2">
                <Label Content="{x:Static prop:Lang.FrameSettings_CategoryTitleBar}" Foreground="{DynamicResource {x:Static SystemColors.HighlightBrushKey}}" Margin="0,0,0,20" Height="50"  FontWeight="Bold" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" />

                <StackPanel Orientation="Horizontal">
                    <ui:Button x:Name="TitleBarColorButton"  HorizontalAlignment="Center" VerticalAlignment="Top" Margin="1,1,5,0" Icon="{ui:SymbolIcon Color24}" Padding="-10" Click="TitleBarColorButton_Click">
                        <ui:Button.Foreground>
                            <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFF5A5A"/>
                                <GradientStop Color="#FF5A5AFF" Offset="0.8"/>
                                <GradientStop Color="#FF5AFF5A" Offset="0.4"/>
                            </LinearGradientBrush>
                        </ui:Button.Foreground>
                    </ui:Button>
                    <Label Content="{x:Static prop:Lang.FrameSettings_BackgroundColor}" Height="30"/>
                </StackPanel>

                <Grid>
                    <Rectangle  Width="20" Height="20" RadiusX="5"   IsHitTestVisible="False" Panel.ZIndex="2" RadiusY="5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,7,16,0">
                        <Rectangle.Fill>
                            <VisualBrush Stretch="Uniform" TileMode="Tile" Viewport="0,0,8,8" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="Absolute" >
                                <VisualBrush.Visual>
                                    <Canvas Width="8" Height="8">
                                        <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="0" Canvas.Top="0"/>
                                        <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="4" Canvas.Top="0"/>
                                        <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="0" Canvas.Top="4"/>
                                        <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="4" Canvas.Top="4"/>
                                    </Canvas>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <Rectangle Width="20" Height="20" RadiusX="5" RadiusY="5" Panel.ZIndex="4344"
                               Fill="{Binding Foreground, ElementName=TitleBarColorTextBoxIcon}" 
                               HorizontalAlignment="Right" IsHitTestVisible="False" VerticalAlignment="Top" Margin="0,7,16,0"/>

                    <ui:TextBox x:Name="TitleBarColorTextBox" Margin="0,0,0,20" PlaceholderText="#0C000000" IconPlacement="Right" TextChanged="TextChangedHandler">
                        <ui:TextBox.Icon>
                            <ui:SymbolIcon Symbol="Square20" Filled="True" FontSize="30" 
                                       x:Name="TitleBarColorTextBoxIcon"
                                       MouseUp="TitleBarColorTextBoxIcon_MouseUp" />
                        </ui:TextBox.Icon>
                    </ui:TextBox>
                </Grid>

                <StackPanel Orientation="Horizontal">
                    <ui:Button x:Name="TitleTextColorButton" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="1,1,5,0" Icon="{ui:SymbolIcon Color24}" Padding="-10" Click="TitleTextColorButton_Click">
                        <ui:Button.Foreground>
                            <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFF5A5A"/>
                                <GradientStop Color="#FF5A5AFF" Offset="0.8"/>
                                <GradientStop Color="#FF5AFF5A" Offset="0.4"/>
                            </LinearGradientBrush>
                        </ui:Button.Foreground>
                    </ui:Button>
                    <Label Content="{x:Static prop:Lang.FrameSettings_TextColor}" Height="30"/>
                </StackPanel>

                <Grid>
                    <Rectangle  Width="20" Height="20" RadiusX="5"   IsHitTestVisible="False" Panel.ZIndex="2" RadiusY="5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,7,16,0">
                        <Rectangle.Fill>
                            <VisualBrush Stretch="Uniform" TileMode="Tile" Viewport="0,0,8,8" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="Absolute" >
                                <VisualBrush.Visual>
                                    <Canvas Width="8" Height="8">
                                        <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="0" Canvas.Top="0"/>
                                        <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="4" Canvas.Top="0"/>
                                        <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="0" Canvas.Top="4"/>
                                        <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="4" Canvas.Top="4"/>
                                    </Canvas>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <Rectangle Width="20" Height="20" RadiusX="5" RadiusY="5" Panel.ZIndex="4344"
                               Fill="{Binding Foreground, ElementName=TitleTextColorTextBoxIcon}" 
                               HorizontalAlignment="Right" IsHitTestVisible="False" VerticalAlignment="Top" Margin="0,7,16,0"/>

                    <ui:TextBox x:Name="TitleTextColorTextBox" PlaceholderText="#FFFFFF" Margin="0,0,0,20" IconPlacement="Right" TextChanged="TextChangedHandler">
                        <ui:TextBox.Icon>
                            <ui:SymbolIcon Symbol="Square20" Filled="True" FontSize="30"
                                           x:Name="TitleTextColorTextBoxIcon"
                                           MouseUp="TitleTextColorTextBoxIcon_MouseUp" />
                        </ui:TextBox.Icon>
                    </ui:TextBox>
                </Grid>


                <Label Content="{x:Static prop:Lang.FrameSettings_TitleBarTextText}" Height="30"/>
                <ui:TextBox x:Name="TitleTextBox" Margin="0,0,0,20" TextChanged="TextChangedHandler"/>




                <Label Content="{x:Static prop:Lang.FrameSettings_Font}" Height="30"/>
                <ui:AutoSuggestBox x:Name="TitleTextAutoSuggestionBox"
                                   OriginalItemsSource="{Binding FontList}"
                                   PlaceholderText="{x:Static prop:Lang.FrameSettings_Searchdot}" Margin="0,0,0,20"/>

                <Label Content="{x:Static prop:Lang.FrameSettings_TextSize}" Height="30"/>
                <ui:NumberBox x:Name="TitleFontSizeNumberBox"                             
                            Minimum="8"
                            Maximum="72"
                            SpinButtonPlacementMode="Inline"
                            Margin="0,0,0,20"/>

                <Label Content="{x:Static prop:Lang.FrameSettings_TextAlignment}" Height="30"/>
                <ComboBox x:Name="TitleTextAlignmentComboBox" Margin="0,0,0,20" SelectionChanged="TitleTextAlignmentComboBox_SelectionChanged">
                    <ComboBoxItem Content="Left"/>
                    <ComboBoxItem Content="Center"/>
                    <ComboBoxItem Content="Right"/>
                </ComboBox>


            </StackPanel>
            <Separator HorizontalAlignment="Center"  Grid.Column="3" Margin="0,20,0,20"/>

            <StackPanel Orientation="Vertical" Margin="10,45,10,0" Grid.Column="4">
                <Label Content="{x:Static prop:Lang.FrameSettings_CategoryFileItems}" Margin="0,0,0,20" Height="50"  FontWeight="Bold" HorizontalAlignment="Center" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Bottom" >
                    <Label.Foreground>
                        <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.HighlightColorKey}}"/>
                    </Label.Foreground>
                </Label>
                <StackPanel Orientation="Horizontal">
                    <ui:Button x:Name="ListViewFontColorButton" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="1,1,5,0" Icon="{ui:SymbolIcon Color24}" Padding="-10" Click="ListViewFontColorButton_Click">
                        <ui:Button.Foreground>
                            <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFF5A5A"/>
                                <GradientStop Color="#FF5A5AFF" Offset="0.8"/>
                                <GradientStop Color="#FF5AFF5A" Offset="0.4"/>
                            </LinearGradientBrush>
                        </ui:Button.Foreground>
                    </ui:Button>
                    <Label Content="{x:Static prop:Lang.FrameSettings_TextColor}" Height="30"/>
                </StackPanel>

                <Grid>
                    <Rectangle  Width="20" Height="20" RadiusX="5"   IsHitTestVisible="False" Panel.ZIndex="2" RadiusY="5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,7,16,0">
                        <Rectangle.Fill>
                            <VisualBrush Stretch="Uniform" TileMode="Tile" Viewport="0,0,8,8" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="Absolute" >
                                <VisualBrush.Visual>
                                    <Canvas Width="8" Height="8">
                                        <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="0" Canvas.Top="0"/>
                                        <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="4" Canvas.Top="0"/>
                                        <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="0" Canvas.Top="4"/>
                                        <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="4" Canvas.Top="4"/>
                                    </Canvas>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <Rectangle Width="20" Height="20" RadiusX="5" RadiusY="5" Panel.ZIndex="4344"
                               Fill="{Binding Foreground, ElementName=ListViewFontColorTextBoxIcon}" 
                               HorizontalAlignment="Right" IsHitTestVisible="False" VerticalAlignment="Top" Margin="0,7,16,0"/>

                    <ui:TextBox x:Name="ListViewFontColorTextBox" PlaceholderText="#FFFFFF" Margin="0,0,0,20" IconPlacement="Right" TextChanged="TextChangedHandler">
                        <ui:TextBox.Icon>
                            <ui:SymbolIcon Symbol="Square20" Filled="True" FontSize="30" 
                                        x:Name="ListViewFontColorTextBoxIcon" 
                                        MouseUp="ListViewFontColorTextBoxIcon_MouseUp" />
                        </ui:TextBox.Icon>
                    </ui:TextBox>
                </Grid>


                <StackPanel Orientation="Horizontal">
                    <ui:Button x:Name="ListViewFontShadowColorButton" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="1,1,5,0" Icon="{ui:SymbolIcon Color24}" Padding="-10" Click="ListViewFontShadowColorButton_Click">
                        <ui:Button.Foreground>
                            <LinearGradientBrush EndPoint="1,1" StartPoint="0.5,0">
                                <GradientStop Color="#FFFF5A5A"/>
                                <GradientStop Color="#FF5A5AFF" Offset="0.8"/>
                                <GradientStop Color="#FF5AFF5A" Offset="0.4"/>
                            </LinearGradientBrush>
                        </ui:Button.Foreground>
                    </ui:Button>
                    <Label Content="{x:Static prop:Lang.FrameSettings_TextShadowColor}" Height="30"/>
                </StackPanel>

                <Grid>
                    <Rectangle  Width="20" Height="20" RadiusX="5"   IsHitTestVisible="False" Panel.ZIndex="2" RadiusY="5" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,7,16,0">
                        <Rectangle.Fill>
                            <VisualBrush Stretch="Uniform" TileMode="Tile" Viewport="0,0,8,8" ViewboxUnits="RelativeToBoundingBox" ViewportUnits="Absolute" >
                                <VisualBrush.Visual>
                                    <Canvas Width="8" Height="8">
                                        <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="0" Canvas.Top="0"/>
                                        <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="4" Canvas.Top="0"/>
                                        <Rectangle Width="4" Height="4" Fill="#FF424242" Canvas.Left="0" Canvas.Top="4"/>
                                        <Rectangle Width="4" Height="4" Fill="#FF6B6B6B" Canvas.Left="4" Canvas.Top="4"/>
                                    </Canvas>
                                </VisualBrush.Visual>
                            </VisualBrush>
                        </Rectangle.Fill>
                    </Rectangle>

                    <Rectangle Width="20" Height="20" RadiusX="5" RadiusY="5" Panel.ZIndex="4344"
                               Fill="{Binding Foreground, ElementName=ListViewFontShadowColorTextBoxIcon}" 
                               HorizontalAlignment="Right" IsHitTestVisible="False" VerticalAlignment="Top" Margin="0,7,16,0"/>

                    <ui:TextBox x:Name="ListViewFontShadowColorTextBox" PlaceholderText="#000000" Margin="0,0,0,20"  IconPlacement="Right" TextChanged="TextChangedHandler">
                        <ui:TextBox.Icon>
                            <ui:SymbolIcon Symbol="Square20" Filled="True" FontSize="30" 
                                       x:Name="ListViewFontShadowColorTextBoxIcon" 
                                       MouseUp="ListViewFontShadowColorTextBoxIcon_MouseUp" />
                        </ui:TextBox.Icon>
                    </ui:TextBox>
                </Grid>

                <Label Content="{x:Static prop:Lang.FrameSettings_ShowFilesRegex}" Height="30" />
                <ui:TextBox x:Name="FileFilterRegexTextBox" Margin="0,0,0,20" TextChanged="TextChangedHandler"/>

                <Label Content="{x:Static prop:Lang.FrameSettings_HideFilesRegex}" Height="30"/>
                <ui:TextBox x:Name="FileFilterHideRegexTextBox" Margin="0,0,0,20" TextChanged="TextChangedHandler"/>
                <CheckBox x:Name="ShowDisplayNameCheckBox" Content="{x:Static prop:Lang.FrameSettings_ShowIconText}" Margin="-11,0,0,0" Checked="ShowDisplayNameCheckBox_Checked" Unchecked="ShowDisplayNameCheckBox_Checked"/>
                <StackPanel Orientation="Horizontal">
                    <Label Content="{x:Static prop:Lang.FrameSettings_IconSize}" Height="30" Margin="0,20,0,0"/>
                    <Label x:Name="IconSizeLabel" Content="0%" Height="30" Margin="5,20,0,0" Foreground="{DynamicResource {x:Static SystemColors.MenuHighlightBrushKey}}" FontWeight="Bold"/>
                </StackPanel>
                <Slider x:Name="IconSizeSlider" Width="200" TickPlacement="TopLeft" TickFrequency="1" Minimum="1" Maximum="64" ValueChanged="Slider_ValueChanged" IsSnapToTickEnabled="True"/>
            </StackPanel>
            <Button x:Name="RevertButton" Content="{x:Static prop:Lang.FrameSettings_RevertButton}" Grid.Column="4" HorizontalAlignment="Right" Margin="10" Height="30" Click="RevertButton_Click"  VerticalAlignment="Bottom"/>

        </Grid>



    </Grid>
</ui:FluentWindow>
